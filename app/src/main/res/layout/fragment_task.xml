<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RiwayatDonasi"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout_riwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradientnavbar"
            android:scaleX="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Donasi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="96dp"
            android:textColor="@color/colorAccent"/>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/belasiswa_logo_navbar" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView4"
        android:layout_below="@id/relativelayout_riwayat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>