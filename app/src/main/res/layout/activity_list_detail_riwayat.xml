<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_row"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/riwayat">


    <LinearLayout
        android:id="@+id/text_container_linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
        android:id="@+id/list_item_title_text_view3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
            android:textSize="16sp"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        tools:text="Title of Attraction"/>

        <TextView
            android:id="@+id/list_item_title_text_view3_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#70707070"
            tools:text="Title of Attraction"/>

        <TextView
            android:id="@+id/list_item_brief_desc_text_view3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            tools:text="Brief Description of Attraction"/>

    </LinearLayout>

</RelativeLayout>
