<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/daftar_beasiswa"
    tools:context=".activity.register.RegisterActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageButton
        android:id="@+id/tombolKembali"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/backarrow"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:background="@drawable/persegipanjang_asli"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/persegipanjang_asli"
            android:layout_below="@+id/ti_name"
            android:layout_marginTop="@dimen/child_margin_top">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ti_email"
            android:background="@drawable/persegipanjang_asli"
            android:layout_marginTop="@dimen/child_margin_top"
            app:passwordToggleEnabled="true"
>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:background="@drawable/lonjong"
            android:text="Daftar"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textAllCaps="false"
            />
    </LinearLayout>

</RelativeLayout>